<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.SplashScreenAcitivity">

    <androidx.constraintlayout.widget.Guideline
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/colorWelcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_logo_welcome"
                android:layout_marginTop="170dp"
                android:src="@drawable/img_logo_shadow"
                android:layout_width="226dp"
                android:layout_height="186dp"/>
            <TextView
                android:fontFamily="@font/roboto_bold"
                android:id="@+id/txt_text_logo_welcome"
                android:textSize="55dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VBEEON"/>
            <TextView
                android:fontFamily="@font/roboto_bold"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"
                android:textColorLink="#FFB900"
                android:id="@+id/txt_link_welcome"
                android:textColor="#FFB900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.vbeeon.com"/>
            <TextView
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="12dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/txt_version_welcome"
                android:textColor="#FFB900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.0"/>

        </LinearLayout>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginBottom="-6dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/img_city_welcome"
            android:src="@drawable/landmark"
            android:layout_width="375dp"
            android:layout_height="245dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>